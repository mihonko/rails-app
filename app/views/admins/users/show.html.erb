<h1>会員詳細</h1>

<table>
  <tr>
    <th>会員ID</th>
    <td><%= @user.id %></td>
  </tr>
  <tr>
    <th>名前</th>
    <td><%= @user.last_name %> <%= @user.first_name %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= @user.phone_number %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td>
      〒<%= @user.postal_code %><br>
      <%= @user.prefecture %><%= @user.city %><%= @user.address1 %><%= @user.address2 %>
    </td>
  </tr>
</table>

<div>
  <br>
  <%= link_to "会員一覧に戻る", admins_users_path %>
</div>
